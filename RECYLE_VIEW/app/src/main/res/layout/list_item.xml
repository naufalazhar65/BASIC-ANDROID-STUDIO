<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"> <!-- Menggunakan wrap_content agar tampilan dapat menyesuaikan tinggi kontennya -->

    <TextView
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp" /> <!-- Menambahkan ukuran teks untuk nama -->

    <TextView
        android:id="@+id/alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp" /> <!-- Menambahkan ukuran teks untuk alamat -->
</LinearLayout>
